<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/toolbarcolor"
    android:layout_height="match_parent">
    <com.robosoft.archanakumari.uifilm.RoundedImageVIew
        android:id="@+id/imag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margintopofchildtwo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/childtwofirstimage"
        android:src="@drawable/intothewild"
        />
    <RelativeLayout
        android:id="@+id/layoutone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imag"
        android:layout_marginTop="@dimen/margintopofchildtwo"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/firstrelativeofchildtwo"
      >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/leftmarginoftextofchildtwo"
            android:id="@+id/text"
            android:textSize="20sp"

            android:textColor="@android:color/white"

            android:text="Into the Wild"/>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.2"
            android:rating="3.0"
            android:progressTint="#ffff66"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_below="@id/text"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margintopofchildtwo"

        android:layout_toRightOf="@id/layoutone">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/alarm"

            android:src="@drawable/ic_alarm_white_18dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEANS"
            android:id="@+id/alarmtext"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/alarm"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="@android:color/white"

            android:layout_marginTop="5dp"

            />
    </RelativeLayout>

</RelativeLayout>